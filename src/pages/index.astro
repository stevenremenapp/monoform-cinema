---
import ScreeningDetails from "../components/ScreeningDetails.astro";
import Layout from "../layouts/Layout.astro";
import shows from "../data/schedules/2024-Season-1.json";
import SectionHeader from "../components/SectionHeader.astro";
import Partners from "../components/Partners.astro";
import Footer from "../components/Footer.astro";
import NewsletterMarquee from "../components/NewsletterMarquee.astro";
import PlayingNextMarquee from "../components/PlayingNextMarquee.astro";
import Header from "../components/Header.astro";
import HeroSection from "../components/HeroSection.astro";
---

<Layout
    title="Monoform Cinema | Kalamazoo, MI"
    description="Kalamazoo's new pop-up micro-cinema. Shows every third Wednesday at The Dormouse Theatre."
>
    <Header />
    <PlayingNextMarquee />
    <main>
        <HeroSection />
        <SectionHeader title="Shows" />
        <p class="show-details">
            With elements like pre-shows, guest speakers, discussions, and
            collaborative recommendations, our dream is to create a communal
            space for film lovers to share in experiential filmgoing. Whether
            it's a classic you didn't catch in a theater, or something you've
            never heard of, our hope is to build community around film and
            curate films that will move you.
        </p>
        <p class="show-details">
            For the 2024 season, we'll have screenings on the third Wednesday of
            each month (with two bonus weekend dates in September!) at the
            Dormouse Theatre located at 1030 Portage Street. Stay tuned for
            online ticketing information, and we'll see you there!
        </p>
        {shows.map((show) => <ScreeningDetails {...show} />)}
        <Partners />
    </main>
    <NewsletterMarquee />
    <Footer />
</Layout>

<style>
    main {
        margin: 0;
        padding: 0 40px;
        max-width: 950px;
        color: white;
        font-size: 20px;
        text-align: center;
    }
    .show-details {
        text-align: left;
        margin-bottom: 25px;
    }
    .show-details:last-of-type {
        margin-bottom: 70px;
    }
    .link-button {
        font-size: var(--fs-sm);
        text-decoration: none;
        border: 1px solid var(--accent);
        border-radius: 0.2em;
        padding: 0.15em 0.5em;
        background-color: var(--accent);
        color: var(--base-dark);
        font-size: var(--fs-sm);
    }

    @media screen and (max-width: 800px) {
        p {
            font-size: 16px;
        }
    }

    @media only screen and (max-width: 700px) {
        main {
            padding: 0 20px;
        }
        .profiles-container {
            margin-top: 0.5em;
        }
        .icon-container {
            margin-top: 0.65em;
        }
        .icon {
            width: 1.5em;
            height: 1.5em;
        }
    }

    @media only screen and (max-width: 500px) {
        .profiles-container {
            margin-top: 0.25em;
        }
        .icon-container {
            margin-top: 0.45em;
        }
    }
</style>
