---
import ScreeningDetails from "../components/ScreeningDetails.astro";
import Layout from "../layouts/Layout.astro";
import shows from "../data/schedules/2024-Season-1.json";
import SectionHeader from "../components/SectionHeader.astro";
import Partners from "../components/Partners.astro";
import Footer from "../components/Footer.astro";
import NewsletterMarquee from "../components/NewsletterMarquee.astro";
import PlayingNextMarquee from "../components/PlayingNextMarquee.astro";
import Header from "../components/Header.astro";
---

<Layout
    title="Monoform Cinema"
    description="Kalamazoo's new pop-up micro-cinema. Shows every third Wednesday at The Dormouse Theatre."
>
    <Header />
    <PlayingNextMarquee />
    <main>
        <SectionHeader title="Shows" />
        {shows.map((show) => <ScreeningDetails {...show} />)}
        <Partners />
    </main>
    <NewsletterMarquee />
    <Footer />
</Layout>

<style>
    main {
        margin: 0;
        padding: 0;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        text-align: center;
    }
    h1 {
        font-size: var(--fs-xxl);
        font-weight: 700;
        line-height: 0.9;
        margin-bottom: 0.25rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-transform: uppercase;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .sub-header {
        font-size: var(--fs-base);
        font-weight: 500;
        line-height: 1.15;
        letter-spacing: 1px;
        text-transform: uppercase;
    }
    p {
        font-size: var(--fs-sm);
    }
    .profiles-container {
        margin-top: 0.75em;
    }
    .link-button {
        font-size: var(--fs-sm);
        text-decoration: none;
        border: 1px solid var(--accent);
        border-radius: 0.2em;
        padding: 0.15em 0.5em;
        background-color: var(--accent);
        color: var(--base-dark);
        font-size: var(--fs-sm);
    }
    .icon-container {
        margin-top: 0.75em;
    }
    .icon-link {
        text-decoration: none;
    }
    .icon-link:first-of-type {
        margin-right: 0.5em;
    }
    .icon {
        width: 2em;
        height: 2em;
        fill: var(--accent);
    }

    @media only screen and (max-width: 700px) {
        .profiles-container {
            margin-top: 0.5em;
        }
        .icon-container {
            margin-top: 0.65em;
        }
        .icon {
            width: 1.5em;
            height: 1.5em;
        }
    }

    @media only screen and (max-width: 500px) {
        .profiles-container {
            margin-top: 0.25em;
        }
        .icon-container {
            margin-top: 0.45em;
        }
    }
</style>
