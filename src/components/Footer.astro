<style>
    footer {
        position: relative;
        overflow: hidden;
        width: 100%;
        padding-bottom: 90px;
        color: white;
        margin-top: 80px;
    }
    .content-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .socials-container {
        display: flex;
        padding: 30px 0;
    }
    .socials-container a {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .socials-container a:not(:last-of-type) {
        margin-right: 10px;
    }
    svg {
        width: 48px;
        height: 48px;
        fill: white;
    }
    .links-container {
        width: 100%;
        padding-bottom: 30px;
    }
    .info-links {
        list-style: none;
        display: flex;
        flex-direction: row;
        justify-content: center;
    }
    .info-links li {
        text-transform: uppercase;
        font-size: 1.25rem;
        text-align: center;
    }
    .info-links li a {
        text-decoration: none;
        color: white;
    }
    .info-links li:not(:last-of-type) {
        margin-right: 25px;
    }
    .note {
        text-align: center;
        position: absolute;
        bottom: 5px;
        font-size: 0.85rem;
    }
    .monoform-imprint {
        user-select: none;
        position: absolute;
        text-align: center;
        bottom: -60px;
        width: 100%;
        font-family: "Archivo Black", sans-serif;
        font-size: 10rem;
        color: #ffffff;
        opacity: 25%;
    }

    @media screen and (max-width: 1090px) {
        .monoform-imprint {
            bottom: -50px;
            font-size: 8rem;
        }
    }
    @media screen and (max-width: 890px) {
        .monoform-imprint {
            bottom: -40px;
            font-size: 7rem;
        }
    }
    @media screen and (max-width: 760px) {
        .monoform-imprint {
            bottom: -35px;
            font-size: 6rem;
        }
    }
    @media screen and (max-width: 650px) {
        footer {
            margin-top: 60px;
        }
        .note {
            bottom: 50px;
        }
        .monoform-imprint {
            bottom: -30px;
            font-size: 5rem;
        }
    }
    @media screen and (max-width: 550px) {
        .note {
            bottom: 30px
        }
        .monoform-imprint {
            bottom: -20px;
            font-size: 3rem;
        }
    }
</style>
