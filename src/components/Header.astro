<style>
    header {
        color: var(--base-light);
        display: flex;
        align-items: center;
        width: 100%;
        max-width: 950px;
        padding: 20px 40px;
    }
    img {
        max-width: 125px;
        height: auto;
    }
    .nav-socials-container {
        flex: 1;
        display: flex;
        align-items: center;
    }
    nav {
        flex: 1;
        padding: 0 20px;
    }
    nav ul {
        list-style: none;
        display: flex;
        align-items: center;
        justify-content: space-between;
        text-transform: uppercase;
        margin: 0 40px;
    }
    nav ul li a {
        text-decoration: none;
        color: var(--base-light);
    }
    .socials-container {
        display: flex;
        padding: 30px 0;
    }
    .socials-container a {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .socials-container a:not(:last-of-type) {
        margin-right: 10px;
    }
    svg {
        width: 40px;
        height: 40px;
        fill: var(--base-light);
    }

    @media screen and (max-width: 840px) {
        header {
            flex-direction: column;
            padding: 10px 20px;
            margin-bottom: 10px;
        }
        .nav-socials-container {
            flex-direction: column-reverse;
        }
        .socials-container {
            padding: 15px 0 20px 0;
        }
        nav ul {
            flex-wrap: wrap;
            justify-content: center;
        }
        nav ul li a {
            margin-right: 20px;
        }
        img {
            max-width: 100px;
        }
        svg {
            width: 35px;
            height: 35px;
        }
    }
    @media screen and (max-width: 354px) {
        nav ul li a {
            margin-right: 10px;
        }
    }
</style>
