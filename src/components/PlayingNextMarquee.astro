---
const filmTitle: string = "Nowhere & Bros Before";
const filmPageId: string = "/#nowhere-&-bros-before";
const ticketsUrl: string =
    "https://www.dormousetheatre.com/events/nowhere-film-screening";

const filmTitle2: string = "Dog Movie and puppygirl w/ director Q&A";
const filmPageId2: string = "/#dog-movie-&-puppygirl-w/-director-henry-hanson";
const ticketsUrl2: string =
    "https://www.dormousetheatre.com/events/dog-movie-puppygirl-film-screening-henry-hanson-double-feature-w-director-q-a";
---

<div class="marquee">
    <ul class="marquee__content">
        <li>
            <div class="list-item-container">
                <span>Playing Next:</span><span class="italics title"
                    >{filmTitle}</span
                >
                <a href={filmPageId}>More info</a>
                <a href={ticketsUrl} target="_blank" rel="noopener noreferrer">
                    Get Tickets!
                </a>
                <!-- <button disabled="disabled">Tickets Soon!</button> -->
            </div>
        </li>
        <li>
            <div class="list-item-container">
                <span>Playing Next:</span><span class="italics title"
                    >{filmTitle2}</span
                >
                <a href={filmPageId2}>More info</a>
                <a href={ticketsUrl2} target="_blank" rel="noopener noreferrer">
                    Get Tickets!
                </a>
                <!-- <button disabled="disabled">Tickets Soon!</button> -->
            </div>
        </li>
    </ul>
    <!-- Mirrors the content above -->
    <ul class="marquee__content" aria-hidden="true">
        <li>
            <div class="list-item-container">
                <span>Playing Next:</span><span class="italics title"
                    >{filmTitle}</span
                >
                <a href={filmPageId}>More info</a>
                <a href={ticketsUrl} target="_blank" rel="noopener noreferrer">
                    Get Tickets!
                </a>
                <!-- <button disabled="disabled">Tickets Soon!</button> -->
            </div>
        </li>
        <li>
            <div class="list-item-container">
                <span>Playing Next:</span><span class="italics title"
                    >{filmTitle2}</span
                >
                <a href={filmPageId2}>More info</a>
                <a href={ticketsUrl2} target="_blank" rel="noopener noreferrer">
                    Get Tickets!
                </a>
                <!-- <button disabled="disabled">Tickets Soon!</button> -->
            </div>
        </li>
    </ul>
</div>

<style>
    .marquee {
        --gap: 14rem;
        display: flex;
        align-items: center;
        overflow: hidden;
        user-select: none;
        gap: var(--gap);
        background-color: var(--accent);
        width: 100%;
        text-transform: uppercase;
        font-weight: 900;
        padding: 10px 0;
        color: var(--base-dark);
    }
    .marquee__content {
        flex-shrink: 0;
        display: flex;
        justify-content: space-around;
        align-items: center;
        min-width: 100%;
        gap: var(--gap);
        animation: scroll 100s linear infinite;
    }
    ul {
        list-style: none;
    }
    .list-item-container {
        display: flex;
        align-items: center;
    }
    .title {
        margin-right: 12px;
    }
    .italics {
        font-style: italic;
    }
    a,
    button {
        display: inline-block;
        color: var(--base-dark);
        border: 2px solid var(--base-dark);
        border-radius: 20px;
        font-size: 0.75rem;
        text-transform: uppercase;
        text-decoration: none;
        padding: 5px 10px;
        font-weight: 900;
    }
    a {
        margin-right: 8px;
    }
    button:disabled {
        background-color: var(--accent);
    }

    @keyframes scroll {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(calc(-100% - var(--gap)));
        }
    }
</style>
